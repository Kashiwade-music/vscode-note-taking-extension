{
  "name": "vscode-note-taking-extension",
  "displayName": "vscode-note-taking-extension",
  "description": "Create a markdown note page by simply clicking on categories and entering a file name.",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kashiwade-music/vscode-note-taking-extension.git"
  },
  "activationEvents": [
    "onCommand:vscode-note-taking-extension.createNote"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-note-taking-extension.createNote",
        "title": "Create New Note",
        "category": "Note Taking"
      },
      {
        "command": "vscode-note-taking-extension.initDir",
        "title": "Initialize Note Taking Directory",
        "category": "Note Taking"
      },
      {
        "command": "vscode-note-taking-extension.convertAttachedImage",
        "title": "Convert Attached Image to WebP or AVIF format",
        "category": "Note Taking"
      }
    ],
    "configuration": {
      "title": "vscode-note-taking-extension",
      "properties": {
        "vscode-note-taking-extension.categories": {
          "type": "object",
          "description": "Categories to be used for note taking.",
          "default": {}
        },
        "vscode-note-taking-extension.templates": {
          "type": "object",
          "description": "Templates to be used for note taking.",
          "default": {
            "default": [
              "---",
              "tags: ${1:First tabstop}",
              "---",
              "# ${2:A second tabstop}",
              "Note Created: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}",
              "",
              "## ${3:third tabstop}"
            ]
          }
        },
        "vscode-note-taking-extension.webp.quality": {
          "type": "number",
          "description": "Quality of WebP image.",
          "default": 90
        },
        "vscode-note-taking-extension.webp.lossless": {
          "type": "boolean",
          "description": "Lossless WebP image.",
          "default": false
        },
        "vscode-note-taking-extension.webp.nearLossless": {
          "type": "number",
          "description": "the near lossless encoding, between 0 (max-loss) and 100 (off).",
          "default": 100
        },
        "vscode-note-taking-extension.avif.quality": {
          "type": "number",
          "description": "Quality of avif image.",
          "default": 90
        },
        "vscode-note-taking-extension.avif.lossless": {
          "type": "boolean",
          "description": "Lossless avif image.",
          "default": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
